{
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended"
    ],
    "rules": {
        "indent": ["error", 2],
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-props-no-spreading": "off",
        "react/jsx-curly-spacing": ["error", { "when": "never", "children": true }],
        "template-curly-spacing": ["error", "always"]
    }
}
